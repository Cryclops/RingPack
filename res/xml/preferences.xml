<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="Playback Settings">
		<CheckBoxPreference
			android:title="@string/aboutTitle"
			android:defaultValue="true"
			android:summary="@string/aboutContents"
			android:key="SHOW_ABOUT_PREF" />
		<CheckBoxPreference
			android:title="@string/shuffleTitle"
			android:defaultValue="true"
			android:summary="@string/shuffleContents"
			android:key="SHUFFLE_PREF" />
		<CheckBoxPreference
			android:title="@string/lockTitle"
			android:defaultValue="false"
			android:summary="@string/lockContents"
			android:key="LOCK_PREF" />
		<CheckBoxPreference
			android:title="@string/accessTitle"
			android:defaultValue="false"
			android:summary="@string/accessContents"
			android:key="ACCESS_PREF" />
